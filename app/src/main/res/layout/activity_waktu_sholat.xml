<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_small"
    tools:context=".activity.WaktuSholatActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="@dimen/dimen_small"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="@dimen/dimen_small"
                    app:srcCompat="@drawable/ic_jadwal_clock"/>

                <TextView
                    android:textColor="@color/warnatextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mendatang"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@id/jadwal_textview_shalat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_primary"
                android:textColor="@color/warnatextButton"
                android:textSize="40sp"
                android:textStyle="bold"
                tools:text="Shubuh" />
            <TextView
                android:id="@id/jadwal_textview_hitungmundur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/warnatextButton"
                tools:text="Hitung Mundur" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_marginTop="@dimen/dimen_primary"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/dimen_little">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_primary"
                android:text="Jadwal Shalat Hari Ini"
                android:textColor="@color/warnatextButton"
                android:textSize="18sp"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CardView_jadwalShalat">

            <LinearLayout
                style="@style/LinearLayout_jadwalShalat"
                android:background="@color/cardView">

                <TextView
                    style="@style/jadwalSholat"
                    android:text="SHUBUH"/>

                <TextView
                    android:id="@id/jadwal_textview_shubuh"
                    style="@style/jadwalWaktu"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CardView_jadwalShalat">
            <LinearLayout
                style="@style/LinearLayout_jadwalShalat"
                android:background="@color/cardView">

                <TextView
                    style="@style/jadwalSholat"
                    android:text="DZUHUR"/>

                <TextView
                    android:id="@id/jadwal_textview_dzuhur"
                    style="@style/jadwalWaktu" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CardView_jadwalShalat">
            <LinearLayout
                style="@style/LinearLayout_jadwalShalat"
                android:background="@color/cardView">

                <TextView
                    style="@style/jadwalSholat"
                    android:text="ASHAR"/>

                <TextView
                    android:id="@id/jadwal_textview_ashar"
                    style="@style/jadwalWaktu"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CardView_jadwalShalat">

            <LinearLayout
                style="@style/LinearLayout_jadwalShalat"
                android:background="@color/cardView">

                <TextView
                    style="@style/jadwalSholat"
                    android:text="MAGHRIB"/>

                <TextView
                    android:id="@id/jadwal_textview_maghrib"
                    style="@style/jadwalWaktu"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CardView_jadwalShalat">

            <LinearLayout
                style="@style/LinearLayout_jadwalShalat"
                android:background="@color/cardView">

                <TextView
                    style="@style/jadwalSholat"
                    android:text="ISYA"/>

                <TextView
                    android:id="@id/jadwal_textview_isya"
                    style="@style/jadwalWaktu"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>