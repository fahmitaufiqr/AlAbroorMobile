<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".homeMenu.JadwalPetugas.TambahJadwalPetugasActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal"/>

    <Button
        android:id="@+id/btn_tanggal_jadwal_petugas"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_date_range_black_24dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/tv_tanggal_jadwal_petugas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07/04/2019"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muazin"/>

    <Spinner
        android:id="@+id/et_muazin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imam"/>

    <Spinner
        android:id="@+id/et_imam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_save_jadwal_petugas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpan"/>
</LinearLayout>