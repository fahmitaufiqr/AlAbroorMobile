<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <!-- CARD VIEW PROFILE START -->
    <android.support.v7.widget.CardView
        android:id="@+id/profile"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_height="200dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@color/cardView">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile"
            android:layout_gravity="center"
            android:layout_marginBottom="35dp"/>

        <TextView
            android:id="@+id/namaAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="NAMA ADMIN"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="115dp"
            android:fontFamily="@font/arialbd_1"/>

        <View
            android:id="@+id/line1"
            android:layout_width="300dp"
            android:layout_height="1.5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:layout_marginTop="155dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Admin Masjid Al-Ab'roor"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="160dp"
            android:fontFamily="@font/arial"/>
    </android.support.v7.widget.CardView>
    <!-- CARD VIEW PROFILE END -->

    <!-- CARD VIEW ALARM START -->
    <android.support.v7.widget.CardView
        android:id="@+id/alarm"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_height="150dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@color/cardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <ProgressBar
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="MENUJU SHALAT : "
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="3dp"
                        android:fontFamily="@font/arialbd_1"/>
                    <TextView
                        android:id="@+id/menujuShalat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="SHUBUH"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/arialbd_1"/>
                </LinearLayout>

                <!-- MUADZIN START -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="MUADZIN   : "
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/arial"/>
                    <TextView
                        android:id="@+id/namaMuadzin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="Nama Muadzin"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/arial"/>
                </LinearLayout>
                <!-- MUADZIN END -->

                <!-- MUADZIN START -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="IMAM          : "
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/arial"/>
                    <TextView
                        android:id="@+id/namaNama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="Nama Imam"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/arial"/>
                </LinearLayout>
                <!-- MUADZIN END -->

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <!-- CARD VIEW PROFILE END -->

    <Button
        android:id="@+id/tambahUser"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:text="tambah pengguna"
        android:drawableLeft="@drawable/ic_tambah_user"
        android:paddingLeft="15dp"
        android:textSize="19dp"
        android:fontFamily="@font/raleway"
        android:textColor="@color/warnatextButton"
        android:background="@drawable/button_shape"/>

</LinearLayout>