<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".homeMenu.JadwalPetugas.JadwalPetugasActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <CalendarView
            android:id="@+id/cv_jadwal_petugas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/grey"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/iv_su"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_muazin1"
                    android:layout_width="match_parent"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    tools:text="Muazin"/>

                <TextView
                    android:id="@+id/tv_imam1"
                    android:layout_width="match_parent"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    tools:text="Imam"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_dz"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:padding="4dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/iv_dz"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_muazin2"
                    android:layout_width="match_parent"
                    android:ellipsize="end"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    tools:text="Muazin"/>

                <TextView
                    android:id="@+id/tv_imam2"
                    android:layout_width="match_parent"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    tools:text="Imam"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_as"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:padding="4dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/iv_as"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_muazin3"
                    android:layout_width="match_parent"
                    android:ellipsize="end"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    tools:text="Muazin"/>

                <TextView
                    android:id="@+id/tv_imam3"
                    android:layout_width="match_parent"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    tools:text="Imam"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_mg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:padding="4dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/iv_mg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_muazin4"
                    android:layout_width="match_parent"
                    android:ellipsize="end"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    tools:text="Muazin"/>

                <TextView
                    android:id="@+id/tv_imam4"
                    android:layout_width="match_parent"
                    android:ellipsize="marquee"
                    android:textColor="#000"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    tools:text="Imam"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_is"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:padding="4dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/iv_is"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_muazin5"
                    android:layout_width="match_parent"
                    android:ellipsize="end"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    tools:text="Muazin"/>

                <TextView
                    android:id="@+id/tv_imam5"
                    android:layout_width="match_parent"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    tools:text="Imam"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>