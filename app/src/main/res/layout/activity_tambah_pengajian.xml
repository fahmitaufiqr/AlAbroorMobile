<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeMenu.Acara.JadwalPengajian.TambahPengajianActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/warnaText2"
                android:textColorHint="@color/warnaText2">

                <EditText
                    android:id="@+id/input_nama_acara"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Acara"
                    android:inputType="textCapWords"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:textSize="20sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/warnaText2"
                android:textColorHint="@color/warnaText2">

                <EditText
                    android:id="@+id/input_keterangan"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Keterangan"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:textSize="20sp" />
            </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/view_date"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:hint="Tanggal Pengajian"
                        android:textSize="20sp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/border"
                        android:padding="10dp"/>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_date_range_black_24dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/pick_date"
                        android:layout_gravity="center_vertical"/>
                    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/view_jam"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:hint="Jam Mulai"
                        android:maxLines="1"
                        android:textSize="20sp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/border"
                        android:padding="10dp"/>
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_access_time_black_24dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/pick_time"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dikirim oleh : "
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/nama_pengirim_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pengirim"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/save_acara"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="SIMPAN"
                android:textSize="20sp"
                android:textColor="@color/warnatextButton"
                android:background="@color/colorPrimary"
                android:paddingEnd="4dp"/>
            <Button
                android:id="@+id/cancel_bt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="BATAL"
                android:textSize="20sp"
                android:textColor="@color/warnatextButton"
                android:background="@color/colorPrimary"
                android:paddingStart="4dp"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>