<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="80dp"
        tools:context=".LoginActivity">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MASUK"
            android:textSize="56dp"
            android:fontFamily="@font/raleway"
            android:textColor="@color/warnaText" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Al-Ab'roor Mobile"
            android:textSize="31dp"
            android:fontFamily="@font/raleway"
            android:textColor="@color/warnaText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Login menggunakan nomor"
            android:textSize="17dp"
            android:fontFamily="@font/arial"
            android:textColor="@color/warnaText2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WhatsApps anda"
            android:textSize="17dp"
            android:fontFamily="@font/arial"
            android:textColor="@color/warnaText2"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:hint="08********"
            android:maxLength="12"
            android:maxLines="1"
            android:textSize="20dp"
            android:fontFamily="@font/raleway"
            android:inputType="phone"
            android:textColor="@color/warnaText"
            android:drawableLeft="@drawable/ic_action_phone"/>

        <View
            android:layout_width="150dp"
            android:layout_height="5dp"
            android:layout_marginTop="30dp"
            android:background="@color/warnaGaris"
            />

        <Button
            android:id="@+id/loginbt"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:text="MASUK"
            android:textSize="30dp"
            android:fontFamily="@font/raleway"
            android:textColor="@color/warnatextButton"
            android:background="@drawable/button_shape"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Copyright Â© Atom Team 2018-2019 All rights reserved."
        android:layout_centerInParent="true"
        android:paddingBottom="20dp"
        android:textSize="11dp"
        android:fontFamily="@font/arial"/>
</RelativeLayout>