<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="4dp"
        android:clickable="true"
        android:elevation="6dp"
        android:focusable="true"
        android:background="@android:color/background_light"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:id="@+id/ramadhan_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/tanggal_puasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senin, 4 Mei 2019"
                android:textAppearance="@style/Base.TextAppearance.AppCompat" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Imam Isya &amp; Tarawih   : "
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/nama_imam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_marginEnd="20dp"
                    android:text="Nama Imam"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qultum                           : "
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/nama_qultum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Qultum"
                    android:textSize="12sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

