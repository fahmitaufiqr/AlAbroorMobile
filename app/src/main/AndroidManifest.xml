<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alabroormobile">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission-group.PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_alabroor"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_alabroor_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".homeMenu.Acara.JadwalPengajian.JadwalPengajianActivity" />
        <activity android:name=".homeMenu.Acara.Ramadhan.DetailRamadhanActivity" />
        <activity android:name=".homeMenu.Acara.Ramadhan.RamadhanActivity" />
        <activity android:name=".SplashscreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"
                    android:label="Aplikasi Penjadwalan Masjid Al-Ab'roor" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login2Activity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".homeMenu.InfoActivity" />
        <activity android:name=".homeMenu.ProfileActivity" />
        <activity android:name=".homeMenu.ArahKiblat.ArahKiblatActivity" />
        <activity android:name=".homeMenu.Acara.AcaraActivity" />
        <activity android:name=".homeMenu.StatistikActivity" />
        <activity android:name=".homeMenu.JadwalPetugas.JadwalPetugasActivity" />
        <activity android:name=".homeMenu.DaftarPengurus.DaftarPengurusActivity" />
        <activity android:name=".homeMenu.DaftarPengurus.TambahPengurusActivity" />
        <activity android:name=".homeMenu.WaktuShalatActivity" />

        <receiver android:name=".AlarmNotificationReceiver" />

        <receiver android:name=".AlarmNotificationReceiverSubuh" />

        <service android:name=".FirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".homeMenu.JadwalPetugas.TambahJadwalPetugasActivity" />
        <activity android:name=".homeMenu.Ramadhan.JadwalRamadhanActivity" />
        <activity android:name=".homeMenu.Ramadhan.TambahJadwalRamadhanActivity"></activity>
    </application>

</manifest>