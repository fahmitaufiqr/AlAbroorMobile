<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alabroormobile">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission-group.PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_alabroor"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_alabroor_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.RamadhanAct.DetailRamadhanActivity"></activity>
        <activity android:name=".activity.RamadhanAct.RamadhanActivity" />
        <activity android:name=".activity.SplashscreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"
                    android:label="@string/title_activity_main2" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddReminderActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activity.GoogleLogin.Login2Activity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".activity.Acara.ViewPengajianActivity" />
        <activity android:name=".activity.Menu.InfoActivity" />
        <activity android:name=".activity.Menu.ProfileActivity" />
        <activity android:name=".activity.Menu.ArahKiblatActivity" />
        <activity android:name=".activity.Menu.AcaraActivity" />
        <activity android:name=".activity.Menu.StatistikActivity" />
        <activity android:name=".activity.Acara.JadwalPengajianActivity" />
        <activity android:name=".activity.Menu.JadwalPetugasActivity" />
        <activity android:name=".activity.Menu.DaftarPengurusActivity" />
        <activity android:name=".activity.WaktuShalat2Activity" />
        <activity android:name=".activity.Acara.TambahAcaraActivity" />
        <activity android:name=".activity.Pengurus.TambahPengurusActivity" />
        <activity android:name=".activity.Menu.WaktuShalatActivity" />

        <provider
            android:name=".data.AlarmReminderProvider"
            android:authorities="edmt.dev.alarmreminder"
            android:exported="false" />

        <service
            android:name=".reminder.ReminderAlarmService"
            android:exported="false" />
        <service android:name=".service.FirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>